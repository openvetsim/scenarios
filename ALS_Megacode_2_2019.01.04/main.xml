			</trigger>
		</triggers>
	</scene>
	
	<scene>
		<!-- VF 2 - Need Compressions -->
		<title>VF 2 - Need compressions</title>
		<id>7</id>
		<init>
		</init>
		
		<!-- triggers to leave the scene -->
		<triggers>
			<!-- jump to VF 3 if compressions for at least 100 seconds -->
			<trigger>
				<test>GTE</test>
				<scene_id>8</scene_id>
				<cpr>
					<duration>100</duration>
				</cpr>
			</trigger>					
		</triggers>
	</scene>
	
	<scene>
		<!-- VF 3 - Need defibrillation -->
		<title>VF 3 - Need defibrillation</title>
		<id>8</id>
		<init>
		</init>
		
