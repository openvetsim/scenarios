			<trigger>
				<event_id>aed</event_id>
				<scene_id>100</scene_id>
			</trigger>
		</triggers>
	</scene>

	<scene>
		<!-- PEA 2 - Need Compressions -->
		<title>PEA 2 - Need Compressions</title>
		<id>5</id>
		<init>			
		</init>
		
		<!-- triggers to leave the scene -->
		<triggers>
			<!-- jump to terminal asystole if defib attempted -->
			<trigger>
				<event_id>aed</event_id>
				<scene_id>100</scene_id>
			</trigger>
