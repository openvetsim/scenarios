		<triggers>
			<!-- jump to next state if epi or vasopressin are given -->
			<trigger>
				<event_id>epi_low</event_id>
				<scene_id>5</scene_id>
			</trigger>
			<trigger>
				<event_id>vasopressin</event_id>
				<scene_id>5</scene_id>
