				<rate>0</rate>
				<etco2>56</etco2>
				<transfer_time>0</transfer_time>
				<chest_movement>0</chest_movement>
			</respiration>
			<general>
				<temperature>995</temperature>
				<transfer_time>0</transfer_time>
			</general>
		</init>
	</scene>
	
