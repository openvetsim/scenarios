<?xml version='1.0' encoding='UTF-8'?>
<scenario>
	<header>
		<author>Terry K</author>
		<title>
			<name>Test HR, BP Triggers</name>
			<top>5</top>
			<left>10</left>
		</title>
		<date_of_creation>2016-06-22</date_of_creation>
		<description>A framework test scenario</description>
	</header>
	<profile>
		<avatar>
			<filename>stock-dog.jpg</filename>
			<height_pct>100</height_pct>
			<width_pct>50</width_pct>
		</avatar>
		<summary>
			<description>
				Since last birthday party, patient has exhibited signs of depression.  Patient saw reflection in mirror where whiskers were showing signs of gray, 
				and patient's girlfriend 'Fifi' was seen with a younger Golden Retriever.
			</description>
			<breed>German Shepard</breed>
			<gender>Male</gender>
			<weight>25 kg</weight>
			<symptoms>
				Not eating, no energy, excessive panting.
			</symptoms>
			<image>fido.jpg</image>
			<species>Canine</species>
		</summary>
		<controls>
			<color>#000000</color>
			<control>
				<title>Vocalizations</title>
				<id>vocals-dog-control</id>
				<top>125</top>
				<left>300</left>
			</control>
			<control>
				<title>Right Lung Sounds</title>
				<id>right-lung-dog-control</id>
				<top>180</top>
				<left>80</left>
			</control>
			<control>
				<title>Left Lung Sounds</title>
				<id>left-lung-dog-control</id>
				<top>180</top>
				<left>320</left>
			</control>
			<control>
				<title>Femoral Pulse</title>
				<id>pulse-dog-control</id>
				<top>275</top>
				<left>300</left>
			</control>
			<control>
				<title>Heart Sounds</title>
				<id>heart-sound-dog-control</id>
				<top>225</top>
				<left>221</left>
			</control>
			<control>
				<title>Chest Movement</title>
				<id>chest-dog-control</id>
				<top>210</top>
				<left>325</left>
			</control>
			<control>
				<title>CPR</title>
				<id>button-cpr</id>
				<top>20</top>
				<left>450</left>
			</control>
			<control>
				<title>ECG</title>
				<id>button-ekg</id>
				<top>350</top>
				<left>0</left>
			</control>
			<control>
				<title>SpO&lt;sub&gt;2&lt;&#47;sub&gt;</title>
				<id>button-SpO2</id>
				<top>350</top>
				<left>55</left>
			</control>
			<control>
				<title>ETCO&lt;sub&gt;2&lt;&#47;sub&gt;</title>
				<id>button-CO2</id>
				<top>350</top>
				<left>395</left>
			</control>
			<control>
				<title>Cuff</title>
				<id>button-bpcuff</id>
				<top>350</top>
				<left>450</left>
			</control>
		</controls>
	</profile>

	<vocals>
		<file>
			<filename>CatHissMono.wav</filename>
			<title>Cat Hiss</title>
		</file>
		<file>
			<filename>CatMeow1.wav</filename>
			<title>Cat Meow</title>
		</file>
		<file>
			<filename>CatScream2.wav</filename>
			<title>Cat Scream</title>
		</file>
	</vocals>	
	
	<media>
		<file>
			<url>mri.jpg</url>
			<title>MRI of healthy dog</title>
		</file>
		<file>
			<url>x-ray.pdf</url>
			<title>X-Ray of healthy dog</title>
		</file>
		<file>
			<url>blood_work.jpg</url>
			<title>Blood work of healthy dog</title>
		</file>
	</media>

	<init>
		<cardiac>
			<rhythm>sinus</rhythm>
			<vpc>none</vpc>
			<pea>0</pea>
			<vpc_freq>10</vpc_freq>
			<vfib_amplitude>low</vfib_amplitude>
			<rate>78</rate>
			<pwave>none</pwave>
			<pr_interval>140</pr_interval>
			<qrs_interval>85</qrs_interval>
			<bps_sys>105</bps_sys>
			<bps_dia>70</bps_dia>
		</cardiac>
		<respiration>
			<left_sound_in>normal</left_sound_in>
			<left_sound_out>normal</left_sound_out>
			<left_sound_back>normal</left_sound_back>
			<right_sound_in>normal</right_sound_in>
			<right_sound_out>normal</right_sound_out>
			<right_sound_back>normal</right_sound_back>
			<inhalation_duration>1350</inhalation_duration>
			<exhalation_duration>1050</exhalation_duration>
			<spo2>95</spo2>
			<etco2>34</etco2>
			<rate>20</rate>
		</respiration>			
		<general>
			<temperature>1017</temperature>
		</general>
		<initial_scene>1</initial_scene>
		<record>1</record>
	</init>
   
	<events>
		<category>
			<name>drugs</name>
			<title>Injected Drugs</title>
			<event>
				<title>Morphine</title>
				<id>opiate_morphine</id>
			</event>
			<event>
				<title>Vicodin</title>
				<id>hydrocodone</id>
			</event>
		</category>
		<category>
			<name>abc</name>
			<title>ABC</title>
			<event>
				<title>Intubate</title>
				<id>intubate</id>
			</event>
			<event>
				<title>CPR</title>
				<id>cpr</id>
			</event>
			<event>
				<title>Shock</title>
				<id>aed</id>
				<priority>1</priority>
			</event>
		</category>
		<category>
			<name>fun</name>
			<title>Fun</title>
			<event>
				<title>Beer</title>
				<id>beer</id>
				<priority>1</priority>
			</event>
			<event>
				<title>Wine</title>
				<id>wine</id>
				<priority>1</priority>
			</event>
			<event>
				<title>Scotch</title>
				<id>scotch</id>
			</event>
			<event>
				<title>Whiskey</title>
				<id>whiskey</id>
				<priority>1</priority>
			</event>
		</category>
	</events>
	<scene>
		<!-- Starting scene. Wait until timeout and jump to next scene -->
		<title>Start</title>
		<id>1</id>
		<init>
			<cardiac>
				<rhythm>sinus</rhythm>
				<vpc>none</vpc>
				<pea>0</pea>
				<rate>70</rate>
				<transfer_time>30</transfer_time>
				<bps_sys>90</bps_sys>
				<bps_dia>85</bps_dia>
			</cardiac>
			<respiration>
				<spo2>98</spo2>
				<rate>50</rate>
				<transfer_time>30</transfer_time>
			</respiration>
			<general>
				<temperature>1007</temperature>
				<transfer_time>30</transfer_time>
			</general>
		</init>
		
		<timeout>
			<timeout_value>10</timeout_value>
			<scene_id>2</scene_id>
		</timeout>
	</scene>
	<scene>
		<!-- test BP Rise trigger -->
		<title>BP Rise Test</title>
		<id>2</id>
		<init>
			<cardiac>
				<rate>90</rate>
				<bps_sys>134</bps_sys>
				<bps_dia>110</bps_dia>
				<transfer_rate>30</transfer_rate>
			</cardiac>
		</init>
		<triggers>
			<trigger>
				<cardiac>
					<bps_sys>130</bps_sys>
				</cardiac>
				<test>GTE</test>
				<scene_id>3</scene_id>
			</trigger>
			<trigger>
				<cardiac>
					<bps_dia>109</bps_dia>
				</cardiac>
				<test>GT</test>
				<scene_id>3</scene_id>
			</trigger>
		</triggers>
	</scene>
	<scene>
		<!-- Test Cardiac Rate Drop Trigger -->
		<title>Heart Rate Drop Test</title>
		<id>3</id>
		<init>
			<cardiac>
				<rate>70</rate>
				<transfer_time>20</transfer_time>
			</cardiac>
		</init>
		<triggers>
			<trigger>
				<test>LTE</test>
				<scene_id>4</scene_id>
				<cardiac>
					<rate>70</rate>
				</cardiac>
			</trigger>
		</triggers>
	</scene>
	<scene>
		<title>End</title>
		<id>0</id>	<!-- Scene ID 0 is the ending scene -->
		<end>Successful Completion</end>
	</scene>
	<scene>
		<title>Heart Attack</title>
		<id>4</id>
		<init>
			<cardiac>
				<rhythm>vfib</rhythm>
				<rate>0</rate>
				<pea>1</pea>
			</cardiac>
			<respiration>
				<spo2>0</spo2>
				<rate>0</rate>
				<etco2>0</etco2>
				<transfer_time>0</transfer_time>
			</respiration>
		</init>
		<triggers>
			<trigger>
				<test>GTE</test>
				<scene_id>6</scene_id>
				<cpr>
					<duration>10</duration>
				</cpr>
			</trigger>
		</triggers>
		<timeout>
			<timeout_value>40</timeout_value>
			<scene_id>5</scene_id>
		</timeout>
	</scene>
	<scene>
		<title>Flat line</title>
		<id>5</id>
		<init>
			<cardiac>
				<rhythm>vfib</rhythm>
			</cardiac>
			<respiration>
				<spo2>0</spo2>
				<rate>0</rate>
				<etco2>0</etco2>
				<transfer_time>0</transfer_time>
			</respiration>
		</init>
		<timeout>
			<timeout_value>1</timeout_value>
			<scene_id>0</scene_id>
		</timeout>
	</scene>
	<scene>
		<title>Wait for drink</title>
		<id>6</id>
		<init>
			<cardiac>
				<rhythm>sinus</rhythm>
				<rate>80</rate>
				<pea>0</pea>
			</cardiac>
			<respiration>
				<spo2>35</spo2>
				<rate>30</rate>
				<etco2>70</etco2>
				<transfer_time>5</transfer_time>
			</respiration>
		</init>
		<triggers>
			<trigger>
				<event_id>beer</event_id>
				<scene_id>0</scene_id>
			</trigger>
			<trigger>
				<event_id>scotch</event_id>
				<scene_id>0</scene_id>
			</trigger>
		</triggers>
	</scene>
</scenario>